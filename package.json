{
  "name": "boilerplate-ts-node-mongo",
  "version": "1.0.0",
  "description": "A base template which can be used to quickly spin typescript nodejs + mongoDB projects",
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon --exec node -r ts-node/register src/app.ts",
    "lint": "eslint . --ext .ts",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "check-deps": "madge --circular . --exclude dist/",
    "generate-keys": "ts-node src/utils/secret.utils.ts"
  },
  "pre-commit": [
    "lint",
    "check-deps",
    "prettier:write"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.7.5",
    "morgan": "~1.9.1",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.5.1",
    "uuid4": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/uuid4": "^2.0.0",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/jsonwebtoken": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.22.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "mongodb-memory-server": "^8.12.1"
  },
  "author": "Mayank Kaushik",
  "license": "ISC"
}
